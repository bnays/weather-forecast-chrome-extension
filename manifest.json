{
  "manifest_version": 2,
  "name": "React Weather App",
  "version": "0.1",
  "description": "Weather forecast chrome extension ",
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "permissions": [
    "tabs", "https://www.weatherapi.com/*"
  ],
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "content_scripts": [{
    "js": [ "static/js/content.js" ],
    "matches": [
      "http://*.example.com/*", "https://*.example.com/*"
    ]
  }],
  "icons": {
    "192": "logo192.png"
  },
  "browser_action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  }
}
